{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Flask: App",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "args": ["run", "--no-debugger", "--no-reload"],
            "jinja": true
        }
    ]
}
